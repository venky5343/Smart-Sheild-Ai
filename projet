                                <Shield className="w-7 h-7 text-white" />
                            </div>
                        </div>
                        <div>
                            <h1 className="text-2xl font-black tracking-tighter bg-clip-text text-transparent bg-gradient-to-r from-white via-green-400 to-emerald-500">
                                SCAMSHIELD <span className="text-[10px] text-gray-500 ml-1">v4.0 AI</span>
                            </h1>
                            <div className="flex items-center space-x-2">
                                <div className="w-1.5 h-1.5 bg-green-500 rounded-full animate-pulse" />
                                <span className="text-[8px] uppercase tracking-[0.3em] text-gray-500 font-bold underline decoration-green-500/50">Core Defense Online</span>
