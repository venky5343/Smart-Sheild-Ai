import React, { useState, useEffect, useRef } from 'react';
import {
    Shield, ShieldAlert, ShieldCheck, Search, MessageSquare,
    Mail, Phone, BarChart2, AlertTriangle, FileText, Upload,
    CheckCircle2, XCircle, Loader2, Radar, BrainCircuit,
    Terminal, Activity, Globe, Cpu, Download, Info,
    FileSearch, Lock, Hash, Calendar, User, FileWarning,
    ScanSearch, AlertCircle, X, ClipboardCheck, Copy,
    Zap, Fingerprint, Network, Database
} from 'lucide-react';

// --- CORE UTILITIES & CONSTANTS ---

const CLASSIFICATION = {
    SAFE: { label: 'SAFE', color: 'text-green-500', bg: 'bg-green-500/10', border: 'border-green-500/20', icon: ShieldCheck, range: [0, 25] },
    SUSPICIOUS: { label: 'SUSPICIOUS', color: 'text-yellow-500', bg: 'bg-yellow-500/10', border: 'border-yellow-500/20', icon: AlertCircle, range: [26, 60] },
    CRITICAL: { label: 'HIGH RISK', color: 'text-red-500', bg: 'bg-red-500/10', border: 'border-red-500/20', icon: ShieldAlert, range: [61, 100] }
};

const getClassification = (score) => {
    if (score <= 25) return CLASSIFICATION.SAFE;
    if (score <= 60) return CLASSIFICATION.SUSPICIOUS;
    return CLASSIFICATION.CRITICAL;
};

// --- SHARED UI COMPONENTS ---

function RiskMeter({ score }) {
    const circ = 2 * Math.PI * 45;
    const offset = circ - (score / 100) * circ;
    const config = getClassification(score);

    return (
        <div className="relative w-32 h-32 flex items-center justify-center">
            <svg className="w-full h-full -rotate-90">
                <circle cx="64" cy="64" r="45" fill="transparent" stroke="currentColor" strokeWidth="8" className="text-gray-800" />
                <circle
                    cx="64" cy="64" r="45" fill="transparent" stroke="currentColor" strokeWidth="8"
                    strokeDasharray={circ} strokeDashoffset={offset}
                    className={`${config.color} transition-all duration-1000 ease-out`}
                    strokeLinecap="round"
                />
            </svg>
            <div className="absolute inset-0 flex flex-col items-center justify-center">
                <span className="text-2xl font-black text-white">{score}%</span>
                <span className="text-[8px] font-bold text-gray-500 uppercase tracking-tighter">Risk Index</span>
            </div>
        </div>
    );
}

function AIExplanation({ text, score }) {
    const [displayedText, setDisplayedText] = useState('');
    const config = getClassification(score);

    useEffect(() => {
        let i = 0;
        const interval = setInterval(() => {
            setDisplayedText(text.slice(0, i));
            i++;
            if (i > text.length) clearInterval(interval);
        }, 15);
        return () => clearInterval(interval);
    }, [text]);

    return (
        <div className={`mt-6 p-5 rounded-2xl border ${config.border} ${config.bg} backdrop-blur-md`}>
            <div className="flex items-center space-x-2 mb-2 text-white/80">
                <BrainCircuit size={16} className="animate-pulse" />
                <span className="text-[10px] font-black uppercase tracking-widest">Neural Analysis Response</span>
            </div>
            <p className="text-sm font-mono leading-relaxed text-gray-200">
                {displayedText}<span className="animate-pulse border-r-2 border-green-500 ml-1">&nbsp;</span>
            </p>
        </div>
    );
}

function UserGuidance({ score }) {
    const config = getClassification(score);
    let message = "";
    if (score <= 25) message = "âœ” No major risk detected. However, always verify before sharing personal details.";
    else if (score <= 60) message = "âš  This content shows some unusual patterns. Avoid clicking unknown links or responding.";
    else message = "ðŸš¨ Strong scam indicators detected. Do NOT share OTP, bank details, or make payments.";

    return (
        <div className={`mt-4 flex items-center space-x-3 p-4 rounded-xl border ${config.border} ${config.bg} animate-bounce-subtle`}>
            <Info size={18} className={config.color} />
            <span className={`text-xs font-bold ${config.color}`}>{message}</span>
        </div>
    );
}

function ScanningSteps({ activeStep }) {
    const steps = ["Pattern Scanning", "Behavioral Analysis", "Structural Validation", "Risk Computation"];
    return (
        <div className="space-y-3 mt-6">
            {steps.map((step, i) => (
                <div key={i} className={`flex items-center space-x-3 transition-opacity duration-300 ${i <= activeStep ? 'opacity-100' : 'opacity-30'}`}>
                    <div className={`w-1.5 h-1.5 rounded-full ${i < activeStep ? 'bg-green-500' : i === activeStep ? 'bg-green-500 animate-ping' : 'bg-gray-700'}`} />
                    <span className={`text-[10px] font-mono tracking-widest uppercase ${i === activeStep ? 'text-green-400' : 'text-gray-500'}`}>{step}</span>
                </div>
            ))}
        </div>
    );
}

// --- MAIN APPLICATION ---

export default function ScamShield() {
    const [activeTab, setActiveTab] = useState('doc');

    return (
        <div className="min-h-screen bg-[#020202] text-gray-100 font-sans selection:bg-green-500/30 overflow-x-hidden">
            {/* Dynamic Background */}
            <div className="fixed inset-0 overflow-hidden pointer-events-none z-0">
                <div className="absolute top-[-10%] left-[-10%] w-[50%] h-[50%] bg-emerald-900/10 blur-[150px] rounded-full animate-pulse" />
                <div className="absolute bottom-[-10%] right-[-10%] w-[50%] h-[50%] bg-blue-900/10 blur-[150px] rounded-full animate-pulse" style={{ animationDelay: '2s' }} />
                <div className="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-50" />
            </div>

            {/* Navigation */}
            <header className="border-b border-white/5 bg-black/40 backdrop-blur-2xl sticky top-0 z-50">
                <div className="max-w-7xl mx-auto px-4 h-20 flex items-center justify-between">
                    <div className="flex items-center space-x-3 group cursor-pointer" onClick={() => setActiveTab('doc')}>
                        <div className="relative">
                            <div className="absolute inset-0 bg-green-500 blur-lg opacity-20 group-hover:opacity-40 transition-opacity" />
